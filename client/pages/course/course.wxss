.course-list-header {
  padding: 20px 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.city-icon {
  height: 15px;
  width: 15px;
}

.store-area {
  font-size: 18px;
  line-height: 18px;
  font-weight: bold;
  padding-left: 5px;
  padding-right: 15px;

}

.right-arrow {
  position: relative;
}

.right-arrow::after {
  display: inline-block;
  content: " ";
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: black;
  border-style: solid;
  transform: rotate(45deg);

  position: absolute;
  top: 50%;
  right: 2px;
  margin-top: -3px;
}

.filter-icon {
  height: 15px;
  width: 15px;
  margin-right: 5px;
  vertical-align: middle;
}

.course {
  font-size: 13px;
  line-height: 13px;
