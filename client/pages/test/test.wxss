/* pages/test/test.wxss */
.contanier {
  display: flex;
  flex-direction: column;
}

.fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}

swiper image {
  width: 100%;
  height: 300rpx;
}

.page {
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 50rpx;
  /* border-bottom: 2rpx solid #777; */
}

.tab-item {
  width: 33.3%;
  text-align: center;
  font-size: 24rpx;
  color: #777;
  margin: 0 26rpx;
  font-weight: bold;
}

.swiper {
  margin-top: 20rpx;
  height: 600px;
  background: #dfdfdf;

}

.on {
  color: rgb(122, 236, 99);
  /* border-bottom: 5rpx solid blue; */
}

.bg {
  /* width: 30rpx;
  height: 30rpx; */
  color: #fff;
  background-color: rgb(122, 236, 99);
  border-radius: 50%;
}

.location {
  display: flex;
  flex-direction: row;
  width: 100%;

}

.location image {
  margin-left: 20rpx;
  width: 8rpx;
  height: 30rpx;
}

.location text {
  font-size: 26rpx;
  margin-left: 10rpx;

}

image {
  width: 16rpx;
  height: 50rpx;
}

.store {
  display: flex;
  width: 100%;
  margin-top: 20rpx;

}

.store text {

  font-size: 24rpx;
}

.store-name {
  margin-left: 10rpx;
  font-size: 24rpx;
}

.store image {
  margin-left: 20rpx;
  width: 8rpx;
  height: 30rpx;
}

.store-location {
  margin-left: 400rpx;
  font-size: 24rpx;
}

.fixarea {
  z-index: 2;
  /* position: absolute; */
  background-color: #fff;
}

.courseTempl {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  height: 300rpx;

}

.courseDetail image {
  width: 150rpx;
  height: 150rpx;

}

.courseDetail {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  padding-left: 30rpx;
}

.course-text {

  display: flex;
  flex-direction: column;
  vertical-align: middle;
  background-color: #fff;
  padding-left: 30rpx;
}

.course-text text {
  font-size: 24rpx;
  line-height: 50rpx;
  /* color: #777; */
}

.footer {
  margin: 0 auto;
  color: #dfdfdf;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.course-time {
  background-color: #dfdfdf;
  color: rgb(122, 236, 99);
  width: 215rpx;
  margin-top: 20rpx;
  padding-left: 20rpx;
  /* display: flex;
  justify-content: flex-end;
  align-items: center; */
  border-radius: 0 50rpx 50rpx 0;
}

